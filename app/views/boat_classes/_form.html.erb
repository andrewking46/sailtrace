<%= form_with(model: boat_class, class: "full-width margin-block") do |form| %>
  <% if boat_class.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(boat_class.errors.count, "error") %> prohibited this boat_class from being saved:</h2>

      <ul>
        <% boat_class.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="flex flex-column gap <%= "shake" if flash[:alert] %>">

    <div class="input-group">
      <div class="input-wrapper">
        <%= form.label :name %>
        <div class="input">
          <%= form.text_field :name, required: true, autofocus: !boat_class.persisted?, autocomplete: :off, placeholder: "e.g. Etchells" %>
        </div>
      </div>
    </div>

    <div>
      <%= form.label :is_one_design, style: "display: block" %>
      <%= form.check_box :is_one_design %>
    </div>

    <%= form.button class: "btn btn--reversed fit-content", type: :submit do %>
      <span class="for-screen-reader">Save</span>
    <% end %>
  </fieldset>
<% end %>
