<div class="container">
  <section class="text-align-center">
    <%= image_tag "logos/sailtrace-app-icon.png", role: "presentation", size: 36, class: "center margin-block" %>
    <h1 class="text-x-large text-bold margin-block">Reset password</h1>
    <%= form_with url: password_resets_path, class: "center fit-content margin-block" do |form| %>
      <fieldset class="flex flex-column gap <%= "shake" if flash[:alert] %>">
        <div class="input-group">
          <div class="input-wrapper">
            <%= form.label :email_address %>
            <div class="input">
              <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>
        <%= form.button class: "btn btn--reversed center", type: :submit do %>
          <span class="for-screen-reader">Reset</span>
        <% end %>
      </fieldset>
    <% end %>
    <%= link_to "Back to log in", new_session_path %>
  </section>
</div>
