<div class="race-replay-container" data-controller="race-replay"
       data-race-replay-user-recording-id-value="<%= @user_recording.id %>"
       data-race-replay-race-id-value="<%= @race.id %>"
       data-race-replay-race-started-at-value="<%= @race.started_at.to_i * 1000 %>"
       data-race-replay-race-ended-at-value="<%= @race.ended_at.to_i * 1000 %>">
  <div id="replay-map-container">

    <!-- Time Display -->
    <div id="time-display" data-race-replay-target="timeDisplay">
      00:00:00
    </div>

    <!-- Interactive Map -->
    <div id="replay-map" data-race-replay-target="map" style="height: 100dvh;">
      <!-- Map will be initialized here by the replay-map Stimulus controller -->
    </div>
  </div>

  <!-- Slider for scrubbing through the recorded locations -->
  <div class="slider-wrapper">
    <input type="range" data-action="input->race-replay#sliderValueChanged"
           data-race-replay-target="slider" min="<%= @race.started_at.to_i * 1000 %>" max="<%= @race.ended_at.to_i * 1000 %>" value="<%= @race.started_at.to_i * 1000 %>" step="5000"
           class="slider" id="replay-slider">
  </div>

  <!-- Links for navigation -->
  <div class="navigation-links">
    <%= link_to 'Back to Recording Details', recording_path(@user_recording), class: "btn btn-primary" if @user_recording.present? %>
    <%= link_to 'Back to All Recordings', recordings_path, class: "btn btn-secondary" %>
  </div>
</div>

<!-- The following style block is just an example. Adapt and move to your asset pipeline or CSS files as needed. -->
<style>
  .race-replay-container {
    position: relative;
  }

  #replay-map {
    height: 100%;
  }

  #time-display {
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    background: rgba(255, 255, 255, 0.75);
    padding: 5px 10px;
    border-radius: 5px;
  }

  .slider-wrapper {
    position: absolute;
    bottom: 20px;
    width: 80%;
    max-width: 600px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    padding: 20px;
    background: white;
  }

  .slider {
    display: block;
    width: 100%;
  }

  .navigation-links {
    position: absolute;
    bottom: 80px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    text-align: center;
  }

  .boat-marker {
    min-width: fit-content;
    min-height: fit-content;
    line-height: normal;
  }

  .btn {
    margin: 0 10px;
  }
</style>

