<div id="<%= dom_id recording %>" class="border-top padding-block">
  <div>
    <h3 class="margin-block-end-half">Recording</h3>
    <p class="text-small margin-block-end"><%= recording.created_at.in_time_zone(recording.time_zone).strftime("%A, %b %d %Y %l:%M%p") %></p>
    <p><%= recording.boat.name %> (<%= recording.boat.registration_country %> <%= recording.boat.sail_number %>)</p>
    <dl class="flex flex-wrap gap margin-block">
      <div>
        <dt class="text-small text-muted">Distance</dt>
        <dd><%= number_with_precision(recording.distance, precision: 2) %> nm</dd>
      </div>
      <div>
        <dt class="text-small text-muted">Time</dt>
        <dd><%= recording.duration %></dd>
      </div>
      <div>
        <dt class="text-small text-muted">Average speed</dt>
        <dd><%= recording.average_speed %> knots</dd>
      </div>
    </dl>
  </div>

  <div>
    <%= link_to 'View', recording %>
  </div>
</div>
