<div class="container">
  <h1 class="text-xx-large text-bold margin-block-end">Processing recording</h1>
  <div id="<%= dom_id @recording %>"
       data-controller="recordings--processor"
       data-recordings--processor-id-value="<%= @recording.id %>"
       data-recordings--processor-max-retries-value="5"
       data-recordings--processor-initial-delay-value="5000"
       data-recordings--processor-max-backoff-value="30000"
       data-recordings--processor-check-interval-value="2000">
    <div class="border-radius margin-block overflow-hidden fill-shade full-width">
      <div class="progress-bar fill-orange border-radius" data-recordings--processor-target="progress"></div>
    </div>
    <p class="text-center status" data-recordings--processor-target="status">
      Processing your recording...
    </p>
  </div>
</div>

<style>
  .progress-bar {
    width: 0%;
    height: 0.5rem;
    transition: width 0.5s ease-out;
  }
  .status {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
</style>
