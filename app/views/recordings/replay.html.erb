<%# views/recordings/replay.html.erb %>

<div class="recording-replay-container" data-controller="replay-map"
       data-replay-map-recording-id-value="<%= @recording.id %>"
       data-replay-map-race-id-value="<%= @recording.race_id %>"
       data-replay-map-recording-started-at-value="<%= @recording.started_at.to_i * 1000 %>"
       data-replay-map-recording-ended-at-value="<%= @recording.ended_at.to_i * 1000 %>">
  <div id="replay-map-container">

    <!-- Time Display -->
    <div id="time-display" data-replay-map-target="timeDisplay">
      00:00:00
    </div>

    <!-- Interactive Map -->
    <div id="replay-map" data-replay-map-target="map" style="height: 100vh;">
      <!-- Map will be initialized here by the replay-map Stimulus controller -->
    </div>
  </div>

  <!-- Slider for scrubbing through the recorded locations -->
  <div class="slider-wrapper">
    <input type="range" data-action="input->replay-map#sliderValueChanged"
           data-replay-map-target="slider" min="<%= @recording.started_at.to_i * 1000 %>" max="<%= @recording.ended_at.to_i * 1000 %>" value="<%= @recording.started_at.to_i * 1000 %>" step="5000"
           class="slider" id="replay-slider">
  </div>

  <!-- Links for navigation -->
  <div class="navigation-links">
    <%= link_to 'Back to Recording Details', recording_path(@recording), class: "btn btn-primary" %>
    <%= link_to 'Back to All Recordings', recordings_path, class: "btn btn-secondary" %>
  </div>
</div>

<!-- The following style block is just an example. Adapt and move to your asset pipeline or CSS files as needed. -->
<style>
  .recording-replay-container {
    position: relative;
  }

  #replay-map {
    height: 100%;
  }

  #time-display {
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    background: rgba(255, 255, 255, 0.75);
    padding: 5px 10px;
    border-radius: 5px;
  }

  .slider-wrapper {
    position: absolute;
    bottom: 20px;
    width: 80%;
    max-width: 600px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    padding: 20px;
    background: white;
  }

  .slider {
    display: block;
    width: 100%;
  }

  .navigation-links {
    position: absolute;
    bottom: 80px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    text-align: center;
  }

  .boat-marker {
    border-radius: 2px;
    width: auto;
  }

  .btn {
    margin: 0 10px;
  }
</style>
