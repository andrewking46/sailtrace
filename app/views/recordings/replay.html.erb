<%# views/recordings/replay.html.erb %>

<div class="recording-replay-container">
  <div id="replay-map-container" data-controller="replay-map"
       data-replay-map-recording-id-value="<%= @recording.id %>"
       data-replay-map-boat-color-value="<%= @recording.boat.hull_color %>"
       data-replay-map-start-time-value="<%= @recording.started_at.iso8601 %>">

    <!-- Time Display -->
    <div id="time-display" data-replay-map-target="timeDisplay">
      00:00:00
    </div>

    <!-- Slider for scrubbing through the recorded locations -->
    <div class="slider-wrapper">
      <input type="range" data-action="input->replay-map#sliderValueChanged"
             data-replay-map-target="slider" min="0" max="0" value="0" step="1"
             class="slider" id="replay-slider">
    </div>

    <!-- Interactive Map -->
    <div id="replay-map" data-replay-map-target="map" style="height: 100vh;">
      <!-- Map will be initialized here by the replay-map Stimulus controller -->
    </div>
  </div>

  <!-- Links for navigation -->
  <div class="navigation-links">
    <%= link_to 'Back to Recording Details', recording_path(@recording), class: "btn btn-primary" %>
    <%= link_to 'Back to All Recordings', recordings_path, class: "btn btn-secondary" %>
  </div>
</div>

<!-- The following style block is just an example. Adapt and move to your asset pipeline or CSS files as needed. -->
<style>
  .recording-replay-container {
    position: relative;
  }

  #time-display {
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    background: rgba(255, 255, 255, 0.75);
    padding: 5px 10px;
    border-radius: 5px;
  }

  .slider-wrapper {
    position: absolute;
    bottom: 20px;
    width: 80%;
    max-width: 600px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    padding: 20px;
    background: white;
  }

  .slider {
    display: block;
    width: 100%;
  }

  .navigation-links {
    position: absolute;
    bottom: 80px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    text-align: center;
  }

  .btn {
    margin: 0 10px;
  }
</style>
