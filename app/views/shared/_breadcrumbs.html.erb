<% return if breadcrumbs.empty? %>

<nav class="flex" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-4" role="list">
    <% breadcrumbs.each_with_index do |(label, url), index| %>
      <li>
        <div class="flex items-center">
          <% if index > 0 %>
            <svg
              class="size-5 shrink-0 text-gray-400 dark:text-zinc-500"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                clip-rule="evenodd"
              />
            </svg>
          <% end %>

          <% if index == 0 %>
            <%= link_to label, url, class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-zinc-300 dark:hover:text-white" %>
          <% elsif url.present? && index < breadcrumbs.size - 1 %>
            <%= link_to label, url, class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-zinc-300 dark:hover:text-white" %>
          <% elsif url.present? && index == breadcrumbs.size - 1 %>
            <%= link_to label, url, class: "ml-4 text-sm font-medium text-gray-500 dark:text-zinc-300", "aria-current": "page" %>
          <% else %>
            <span
              class="ml-4 text-sm font-medium text-gray-500 dark:text-zinc-300"
              aria-current="page"
            ><%= label %></span>
          <% end %>
        </div>
      </li>
    <% end %>
  </ol>
</nav>
